<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="15dp"
    android:layout_marginStart="15dp"
    android:orientation="vertical"
    android:background="@drawable/bg_dialog">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/white"
        android:text="Authenticate"
        android:fontFamily="@font/roboto_bold"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/gray_scale"
        android:text="Enter your account information to continue."
        android:textSize="12sp"
        android:layout_marginTop="5dp"
        android:fontFamily="@font/roboto_bold"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"/>

    <com.google.android.material.textfield.TextInputEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:inputType="textEmailAddress"
        android:id="@+id/email"
        android:hint="Email"
        android:textColor="@color/white"
        android:textColorHint="@color/gray_scale"
        android:textSize="14sp"
        android:backgroundTint="@color/plexus"/>

    <com.google.android.material.textfield.TextInputEditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:inputType="textPassword"
        android:id="@+id/password"
        android:hint="Password"
        android:textColor="@color/white"
        android:textColorHint="@color/gray_scale"
        android:textSize="14sp"
        android:backgroundTint="@color/plexus"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="15dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray_scale"
                android:text="Cancel"
                android:id="@+id/cancel"
                android:layout_toLeftOf="@id/login"
                android:fontFamily="@font/roboto_bold"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/plexus"
                android:text="Login"
                android:id="@+id/login"
                android:layout_alignParentEnd="true"
                android:fontFamily="@font/roboto_bold"
                android:layout_marginStart="15dp"
                android:layout_marginEnd="15dp"/>

        </RelativeLayout>

    </LinearLayout>

</LinearLayout>