<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/reply_background">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="5dp"
            android:background="@drawable/reply_inside_background">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/reply_name"
                android:text="Tihan-Nico Paxton"
                android:fontFamily="@font/roboto_bold"
                android:textColor="@color/plexus"
                android:textSize="12sp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:layout_marginStart="5dp"
                android:text="Oh, did you visit that place I told you about?"
                android:textSize="14sp"
                android:layout_below="@id/reply_name"
                android:textColor="@color/white"
                android:maxLines="2"
                android:id="@+id/reply_message"/>

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:src="@drawable/close"
                android:id="@+id/reply_to_message_close"
                android:layout_marginEnd="5dp"
                android:layout_marginTop="3dp"
                android:layout_alignParentEnd="true"/>

        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>