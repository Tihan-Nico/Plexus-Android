<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title_block"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/roboto_bold"
        android:text="Update Settings"
        android:textColor="@color/textColor"
        android:textSize="16sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:fontFamily="@font/roboto"
        android:text="To continue using Plexus agree to upgrade your current settings for Plexus. These settings allow for better use of Plexus features."
        android:textAlignment="center"
        android:textColor="@color/textDescriptionColor"
        android:textSize="12sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:fontFamily="@font/roboto"
        android:text="We are currently not actively updating the Plexus application. Our top priority currently is to transition the Plexus and LookOut platform to our website."
        android:textAlignment="center"
        android:textColor="@color/notice"
        android:textSize="12sp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/continue_btn"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="15dp"
        android:layout_weight="1"
        android:text="Continue"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:backgroundTint="@color/plexus" />

</LinearLayout>