<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_dialog">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="15dp"
        android:id="@+id/dialog_title"
        android:fontFamily="@font/roboto_bold"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:background="@color/colorPrimary"
        android:text="Tihan-Nico Paxton"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:id="@+id/dialog_description"
        android:fontFamily="@font/roboto"
        android:textColor="@color/gray_scale"
        android:layout_below="@id/dialog_title"
        android:background="@color/colorPrimary"
        android:text="The message will only be deleted from your chatroom and will still be visible to your friend(s)."/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/dialog_description"
        android:id="@+id/dialog_list"
        android:background="@color/colorPrimary">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"
            android:fontFamily="@font/roboto"
            android:textColor="@color/white"
            android:background="@color/colorPrimary"
            android:text="Add to Favorites"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"
            android:fontFamily="@font/roboto"
            android:textColor="@color/white"
            android:background="@color/colorPrimary"
            android:text="Pin Chat"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"
            android:fontFamily="@font/roboto"
            android:textColor="@color/white"
            android:background="@color/colorPrimary"
            android:text="Turn Off Notifications"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"
            android:fontFamily="@font/roboto"
            android:textColor="@color/white"
            android:background="@color/colorPrimary"
            android:text="Create Chatroom Shortcut"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginStart="15dp"
            android:fontFamily="@font/roboto"
            android:textColor="@color/white"
            android:background="@color/colorPrimary"
            android:text="Delete"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="right"
        android:id="@+id/dialog_linear"
        android:layout_below="@id/dialog_list"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="15dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/gray_scale"
            android:text="Cancel"
            android:id="@+id/cancel"
            android:textStyle="bold"
            android:layout_marginEnd="30dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/plexus"
            android:text="Delete"
            android:textStyle="bold"
            android:id="@+id/delete_all"/>

    </LinearLayout>

</RelativeLayout>