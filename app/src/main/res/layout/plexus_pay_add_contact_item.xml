<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/contact_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Email"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_margin="15dp">

        <com.google.android.material.textfield.TextInputEditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/textColor"/>

    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/payment_terms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/textDescriptionColor"
        android:fontFamily="@font/roboto"
        android:textSize="12sp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:text="Your email is saved on your device and will be used for the next time you use Plexus Pay. Your email will be shared with the merchants so the can complete your order. Data policies apply."/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/remove_contact_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginTop="15dp"
        android:text="Remove Email"
        android:textAllCaps="false"
        android:fontFamily="@font/roboto_bold"
        android:textColor="@color/white"
        android:enabled="false"/>

</LinearLayout>